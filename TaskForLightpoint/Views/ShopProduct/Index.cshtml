@model IEnumerable<TaskForLightpoint.Models.ShopProduct>

@{
    ViewData["Title"] = "All products in a shop";
}

<h3>All products in this shop</h3>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.Asd">Add a new product to this shop</a>
</p>
