@model TaskForLightpoint.Models.ShopProduct

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ShopProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShopFK" class="control-label"></label>
                <input data-val="true" data-val-required="The Shop field is required." id="ShopFK" name="ShopFK" type="hidden" value="@ViewBag.ShopId">
                @* @Html.HiddenFor(model => model.ShopFK) *@
                <select name="shop" asp-for="ShopFK" disabled="true" class="form-control" asp-items="ViewBag.ShopFK"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductFK" class="control-label"></label>
                <select asp-for="ProductFK" class ="form-control" asp-items="ViewBag.ProductFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
